<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    {{>header}}
    <div class="table-div">

        <table class="styled-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <form action="/editById">
                        <input type="number" name="id" value="{{id}}" hidden>
                        <td>{{generatedId}}</td>
                        <td>{{name}}</td>
                        <td>{{surname}}</td>
                        <td>{{username}}</td>
                        <td>{{email}}</td>
                        <td><button class="upd-btn">Edit</button></td>
                    </form>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>

</html>